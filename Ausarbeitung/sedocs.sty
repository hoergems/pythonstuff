\ProvidesPackage{sedocs}
\NeedsTeXFormat{LaTeX2e}

\usepackage{ifthen}
\usepackage{setspace}

\newboolean{isinlist}

\newcommand{\classheading}[1]{\subsection{#1}}
\newcommand{\classlabelling}{Klasse}

\newcommand{\writeinlist}[1]
	{\ifthenelse{\boolean{isinlist}}{}{\begin{itemize} \setboolean{isinlist}{true}} \item[] #1}

\newcommand{\writeplain}[1]
	{\ifthenelse{\boolean{isinlist}}{\end{itemize} \setboolean{isinlist}{false}}{\ \\[5pt]} #1}


\newenvironment{classdef}[1]{\classheading{\classlabelling\texttt{\ #1}}\setboolean{isinlist}{false} \renewcommand{\labelitemi}{\ }}
		{\ifthenelse{\boolean{isinlist}}{\end{itemize}}{\ \\[5pt]}\rule{\textwidth}{1pt}}

\newcommand{\methoddef}[2]{\writeinlist{\texttt{#1}} \begin{list}{} {\setlength{\leftmargin}{1cm}} \item #2 \end{list}}
\newcommand{\vardef}[2]{\methoddef{#1}{#2}}

\newcommand{\classdesc}[1]{\writeplain{#1}}

